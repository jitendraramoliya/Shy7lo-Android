        <!--android:textSize="@dimen/h1"/>-->

        <LinearLayout
            android:id="@+id/lnrSidebarWishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivWishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/btn_wishlist_selector" />

                <TextView
                    android:id="@+id/tvWishlistCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="@drawable/sidebar_item_text_selector"
                    android:textSize="@dimen/h00" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvSidebarWishlist"
                style="@style/TextviewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="15dp"
                android:text="@string/wishlist"
                android:textColor="@drawable/sidebar_item_text_selector"
                android:textSize="@dimen/h1" />

        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/tvSidebarWishlist"-->
        <!--style="@style/TextviewStyle"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
