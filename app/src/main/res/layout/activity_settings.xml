<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rltTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextviewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="@string/settings"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/h2" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/lnrSettingContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvLanguageTitle"
                style="@style/ShippingTextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:textColor="@color/gray_85"
                android:textSize="@dimen/h0" />

            <include layout="@layout/line_shipping" />

            <TextView
                android:id="@+id/tvLanguage"
                style="@style/TextviewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/ic_details_arrow_down"
                android:text="@string/language"
                android:textColor="@color/black"
                android:textSize="@dimen/h1" />

            <include layout="@layout/line_shipping" />

            <TextView
                android:id="@+id/tvCountryTitle"
                style="@style/ShippingTextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/country"
                android:textColor="@color/gray_85"
                android:textSize="@dimen/h0" />

            <include layout="@layout/line_shipping" />

            <TextView
                android:id="@+id/tvCountry"
                style="@style/TextviewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/ic_details_arrow_down"
                android:text="@string/country"
                android:textColor="@color/black"
                android:textSize="@dimen/h1" />

            <include layout="@layout/line_shipping" />

            <TextView
                android:id="@+id/tvSizeTitle"
                style="@style/ShippingTextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/sizes"
                android:visibility="gone"
                android:textColor="@color/gray_85"
                android:textSize="@dimen/h0" />

<!--            <include layout="@layout/line_shipping" />-->

            <TextView
                android:id="@+id/tvSize"
                style="@style/TextviewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/ic_details_arrow_down"
                android:text="@string/sizes"
                android:textColor="@color/black"
                android:textSize="@dimen/h1" />

<!--            <include layout="@layout/line_shipping" />-->

            <TextView
                android:id="@+id/tvNotificationTitle"
                style="@style/ShippingTextviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/notifications"
                android:visibility="gone"
                android:textColor="@color/gray_85"
                android:textSize="@dimen/h0" />

<!--            <include layout="@layout/line_shipping" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNotification"
                    style="@style/TextviewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="@string/sales_promotions"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h1" />

                <ToggleButton
                    android:id="@+id/tbSalesPromotion"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_switch_sales"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:checked="false" />

            </LinearLayout>

            <include layout="@layout/line_shipping" />

            <LinearLayout
                android:id="@+id/lnrUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEmailTitle"
                    style="@style/ShippingTextviewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/e_mail"
                    android:textColor="@color/gray_85"
                    android:textSize="@dimen/h0" />

                <include layout="@layout/line_shipping" />

                <LinearLayout
                    android:id="@+id/lnrEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etEmail"
                        style="@style/TextviewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:focusable="false"
                        android:clickable="false"
                        android:hint="@string/e_mail"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h1" />

                    <TextView
                        android:id="@+id/tvEmailChange"
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/change_email"
                        android:textColor="@color/gray_85"
                        android:textSize="@dimen/h1" />

                </LinearLayout>

                <include layout="@layout/line_shipping" />

                <TextView
                    android:id="@+id/tvPasswordTitle"
                    style="@style/ShippingTextviewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/password"
                    android:textColor="@color/gray_85"
                    android:textSize="@dimen/h0" />

                <include layout="@layout/line_shipping" />

                <LinearLayout
                    android:id="@+id/lnrPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etPassword"
                        style="@style/TextviewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:clickable="false"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:hint="@string/password"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h1" />

                    <TextView
                        android:id="@+id/tvPasswordChange"
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/change_password"
                        android:textColor="@color/gray_85"
                        android:textSize="@dimen/h1" />

                </LinearLayout>

                <include layout="@layout/line_shipping" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>