        <!--android:textSize="@dimen/h1" />-->

        <TextView
            android:id="@+id/tvSidebarMyShy7lo"
            style="@style/TextviewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/btn_myshy7lo_selector"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="@string/account"
            android:textColor="@drawable/sidebar_item_text_selector"
            android:textSize="@dimen/h1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:background="@color/sidebar_gray" />

        <shy7lo.com.shy7lo.widget.NonScrollListView
            android:id="@+id/lvSideHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0px"
            android:divider="@color/transparent"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"/>

        <TextView
            android:id="@+id/tvSidebarLiveChat"
            style="@style/TextviewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/live_chat"
            android:textColor="@drawable/sidebar_item_text_selector"
            android:textSize="@dimen/h0" />

        <TextView
            android:id="@+id/tvSidebarAppInfo"
            style="@style/TextviewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/app_info"
            android:textColor="@drawable/sidebar_item_text_selector"
            android:textSize="@dimen/h0" />

        <TextView
            android:id="@+id/tvSidebarSignOut"
            style="@style/TextviewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/sign_out"
            android:textColor="@drawable/sidebar_item_text_selector"
            android:textSize="@dimen/h0" />

    </LinearLayout>

</ScrollView>